generator client {
  provider = "prisma-client-js"
}

// Production schema for Postgres. This file is used by CI to run migrations
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setting {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  value       String
  description String?
  type        String?  @default("string")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Agent {
  id             String   @id
  name           String
  personality    String
  body_color     String
  voice          String
  avatar_url     String?
  knowledge_base String?
  system_prompt  String?
  is_active      Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model AdminUser {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  password_hash String
  email         String?
  last_login    DateTime?
  createdAt     DateTime @default(now())
}
